# pnpm configuration

# ============================================
# Hoisting
# ============================================
shamefully-hoist=true

# ============================================
# Performance & Caching
# ============================================
prefer-offline=true

# ============================================
# Strictness & Safety
# ============================================
strict-peer-dependencies=false
auto-install-peers=true

# ============================================
# Node.js & Engine
# ============================================
engine-strict=true
